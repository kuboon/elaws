- const siteTitle = "日本法令引用 URL"
- const description = "クリックで選択してかんたんシェア"
doctype html
html(lang="ja")
  head
    link(rel="stylesheet" href="/style.scss")
    script(defer src="/index.tsx")
    title= siteTitle
    meta(property="og:title" content=siteTitle)
    meta(property="og:description" content=description)
    meta(property="og:image" content=`https://og.kbn.one/%23%20${siteTitle}%0A${description}.png?md=1`)
    meta(name="twitter:card" content="summary")
    meta(name="twitter:title" content=title)
    meta(name="twitter:description" content=sentence)
    meta(name="twitter:image" content=`https://og.kbn.one/%23%20${title}%0A${sentence}.png?md=1`)
    meta(name="viewport" content="width=device-width, initial-scale: 1.0")
  body
    #app
    <script type="text/javascript" src="https://minmoji.ucda.jp/sealjs/https%3A__elaws.kbn.one" charset="UTF-8"></script>
