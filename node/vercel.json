{
  "version": 2,
  "env": {},
  "functions": {
    "api/page.ts": {
      "includeFiles": "data/**"
    },
    "api/sitemap.ts": {
      "includeFiles": "data/index.xml"
    }
  },
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/sitemap.txt", "destination": "/api/sitemap" },
    { "source": "/(.+)", "destination": "/api/page" }
  ]
}
